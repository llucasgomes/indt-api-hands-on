generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  gender    String
  password  String
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pesquisador {
  id             String   @id @default(uuid())
  name           String
  password       String
  especialidade  String?
  email          String   @unique
  titulacao      String
  matricula      String   @unique
  linhaPesquisa  String?
  dataNascimento DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum Bioma {
  FLORESTA
  DESERTO
  SAVANA
  TUNDRA
  AQUATICO
}

enum SensorStatus {
  ATIVO
  INATIVO
  MANUTENCAO
}

model Area {
  id          String  @id @default(uuid())
  nome        String
  descricao   String?
  bioma       Bioma
  latitude    Float
  longitude   Float
  largura     Float
  comprimento Float
  relevo      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sensor {
  id             String       @id @default(uuid())
  serialNumber   String       @unique
  fabricante     String
  modelo         String
  tipo           String
  status         SensorStatus
  ipFixo         String?
  dataInstalacao DateTime
  dataManutencao DateTime?
  cicloLeitura   Int
  latitude       Float
  longitude      Float
  finalidade     String?

  areaId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Leitura {
  id          String   @id @default(uuid())
  umidade     Float
  temperatura Float
  dataHora    DateTime

  sensorId String

  createdAt DateTime @default(now())
}
